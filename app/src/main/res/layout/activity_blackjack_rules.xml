<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.cardgames.activities.BlackjackRulesActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/enterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="443dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#712b94"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <Button
        android:id="@+id/playBlackjackButton"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:onClick="onPlayBlackjack"
        android:text="play"
        android:background="@drawable/action_button"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/enterName"
        app:layout_constraintVertical_bias="0.261" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="-23dp"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/cardValues"
        android:layout_width="289dp"
        android:layout_height="212dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613"
        app:srcCompat="@drawable/card_values" />

    <ImageView
        android:id="@+id/twentyoneImage"
        android:layout_width="103dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/twentyone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <MultiAutoCompleteTextView
        android:id="@+id/twentyOneRules"
        android:layout_width="237dp"
        android:layout_height="231dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/twentyOneRules"
        android:textColor="#712b94"
        android:typeface="sans"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/twentyoneImage"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
